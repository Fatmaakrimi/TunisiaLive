<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme using Material3 -->
    <style name="Base.Theme.TunisiaLive" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>


        <!-- Surface / Background colors -->
        <item name="colorSurface">@color/light_gray</item> <!-- or any other surface color -->
        <item name="colorOnSurface">@color/black</item>



        <!-- Status bar -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- App theme alias -->
    <style name="Theme.TunisiaLive" parent="Base.Theme.TunisiaLive" />
</resources>
